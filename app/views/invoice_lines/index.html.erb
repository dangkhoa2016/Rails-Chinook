<div class="card">
  <div class="card-header">
    <h1>Listing invoice lines</h1>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive mb-3">
      <table class="table table-striped mb-0">
        <thead>
          <tr>
            <th>Invoice</th>
            <th>Track</th>
            <th>Unit price</th>
            <th>Quantity</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @invoice_lines.each do |invoice_line| %>
            <tr>
              <td><%= invoice_line.invoice_id %></td>
              <td><%= invoice_line.track_id %></td>
              <td><%= invoice_line.unit_price %></td>
              <td><%= invoice_line.quantity %></td>
              <td class='action-td btn-sm'>
                <%= link_to invoice_line, class: "btn btn-sm btn-success" do %>
                  <i class="bi-eye"></i> View
                <% end %>
                <%= link_to edit_invoice_line_path(invoice_line), class: "btn btn-sm btn-warning" do %>
                  <i class="bi-pencil"></i> Edit
                <% end %>
                <%= link_to '#', method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-danger", remote: true do %>
                  <i class="bi-trash"></i> Delete
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <%= 
      paginate @invoice_lines, theme: 'bootstrap-5',
      pagination_class: "pagination-sm flex-wrap justify-content-center",
      nav_class: "d-flex justify-content-center"
    %>
  </div>
</div>

<br>

<%= link_to 'New Invoice line', new_invoice_line_path %>
