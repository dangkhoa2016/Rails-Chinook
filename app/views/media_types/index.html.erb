<div class="card">
  <div class="card-header">
    <h1>Listing media types</h1>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive mb-3">
      <table class="table table-striped mb-0">
        <thead>
          <tr>
            <th>Invoice</th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @media_types.each do |media_type| %>
            <tr>
              <td><%= media_type.id %></td>
              <td><%= media_type.name %></td>
              <td class='action-td btn-sm'>
                <%= link_to media_type, class: "btn btn-sm btn-success" do %>
                  <i class="bi-eye"></i> View
                <% end %>
                <%= link_to edit_media_type_path(media_type), class: "btn btn-sm btn-warning" do %>
                  <i class="bi-pencil"></i> Edit
                <% end %>
                <%= link_to '#', method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-sm btn-danger", remote: true do %>
                  <i class="bi-trash"></i> Delete
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= 
      paginate @media_types, theme: 'bootstrap-5',
      pagination_class: "pagination-sm flex-wrap justify-content-center",
      nav_class: "d-flex justify-content-center"
    %>
  </div>
</div>

<br>

<%= link_to 'New Media type', new_media_type_path %>
